{
  "manifest_version": 2,
  "name": "Community Tool",
  "short_name": "Community Tool",
  "version": "1.0.0",
  "description": "Community Tool Copyright Alex Huynh ",
  "permissions": [ "cookies","storage","tabs", "http://*/*", "https://*/*" ,  "nativeMessaging", "background"],
  "options_page": "index.html?#/options",
  "icons": {
    "128": "assets/icon128.png",
    "48": "assets/icon48.png",
    "16": "assets/icon16.png"
  },
  "page_action": {
    "default_icon": "assets/icon16.png",
    "default_popup": "index.html?#/options",
    "default_title": "Community Tool"
  },
  "content_scripts": [
    {
      "js": ["assets/jquery-3.1.0.min.js"],
      "matches": ["https://dkmh.hcmuaf.edu.vn/*"]
    },
    {
      "js": ["content.js"],
      "matches": ["https://www.facebook.com/*"]
    }, {
      "matches": [
        "<all_urls>"
      ],
      "js": ["controller.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
